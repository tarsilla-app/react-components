{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "ESNext"], 
    "types": ["react", "react-dom"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "exclude": ["lib", ".storybook"]
}
